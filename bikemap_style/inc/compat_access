
crossing:barrier!=no
    {addaccess yes;
      set mkgmap:road-speed=0;}

barrier=bollard | barrier=cycle_barrier
    { add mkgmap:bicycle=yes;
      add mkgmap:foot=yes;
      addaccess no;
      set mkgmap:road-speed=1; }
barrier=bus_trap
    { add mkgmap:bus=yes;
      add mkgmap:foot=yes;
      add mkgmap:bicycle=yes;
      addaccess no;
      set mkgmap:road-speed=1; }
barrier=gate
    { add mkgmap:bicycle=yes;
      add mkgmap:foot=yes;
      addaccess no;
      set mkgmap:road-speed=0; }
barrier=kissing_gate | barrier=stile | barrier=block
    { add mkgmap:foot=yes;
      addaccess no;
      set mkgmap:road-speed=0; }
